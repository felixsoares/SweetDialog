<resources>

    <style name="Theme_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="left_to_rigth">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="left_to_left">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>

    <style name="rigth_to_left">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>

    <style name="right_to_right">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="fade">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="up_to_bottom">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="up_to_up">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>

    <style name="bottom_to_up">
        <item name="android:windowEnterAnimation">@anim/slide_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>

    <style name="bottom_to_bottom">
        <item name="android:windowEnterAnimation">@anim/slide_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="bounce">
        <item name="android:windowEnterAnimation">@anim/bounce</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>

    <style name="in_to_out">
        <item name="android:windowEnterAnimation">@anim/in</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>

</resources>
